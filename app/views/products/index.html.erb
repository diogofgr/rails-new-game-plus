<h1>All games</h1>
<p>Find me in app/views/products/index.html.erb</p>

<div class="container">
  <div class="row">

    <% Product.all.each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://placehold.it/500x500')">
        <div class="card-category">Popular</div>
        <div class="card-description">
            <h2><%= product.name %></h2>
            <p>Very cool stuff, useful and smart</p>
          </div>
        <div class="card-user">
            <img src="images/papillard.jpeg" class="avatar">
          </div>
        <%= link_to '', product, {class: 'card-link'}%>
      </div>
    </div>
    <% end %>
    <!-- link_to 'Sell your game', new_user_product_offer_path, {class: 'btn btn-lg btn-warning'} -->
  </div>
</div>

