<div class="wrapper">
  <div class="container product-details">
    <div class="container">
      <h1><%= @product.name %></h1>
      <h2>(<%= @product.release_year %>)</h2>
      <h3>Playstation 4</h3>
      <p>url:</p>
    </div>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <div class="card" style= "background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('http:<%= @product.cover_url %>')">
          </div>
        </div>
  </div>
</div>


<div class="wrapper padded">
  <div class="container offer-games">
    <div class="offer-games-header">
      <div class="container">
        <h5>Seller</h5>
      </div>
      <div class="container">
        <h5>Offer Location</h5>
      </div>
      <div class="container text-right">
        <h4>Price</h4>
      </div>
      <div class="container">

      </div>
    </div>

    <%@product.product_offers.each do |offer| %>

    <div class="offer-games-row">
      <div class="container">
        <% seller = User.find(offer.user_id)  %>
        <h4><%= seller.first_name || "(name not provided)" %></h4>
      </div>
      <div class="container">
        <h4><%= offer.location %></h4>
      </div>
      <div class="container text-right">
        <h3>â‚¬ <%= offer.price %>.00</h3>
      </div>
      <div class="container">
        <%= link_to 'Buy', new_product_offer_transaction_path(product_offer_id: offer.id), class: "btn btn-success" %>
      </div>
    </div>

    <% end %>
  </div>
</div>
