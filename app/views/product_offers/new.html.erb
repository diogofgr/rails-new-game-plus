<div class = "container text-center page-titles">
  <h1>Sell a game!</h1>
</div>

<div class="container">
  <% if !@results.nil? && !@results.empty? %>
    <div class="row">
      <div class="col-xs-12">
        <div class="container text-center">
          <h4> Select a game from the list: </h4>
        </div>
      </div>
    </div>
    <div class="row">
      <% @results.each_with_index do |game, i| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card" style= "background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('http:<%= game[:cover_url] %>')">
            <div class="card-category">Popular</div>
            <div class="card-description">
                <h2><%= game[:name] %></h2>
                <p><%= game[:release_date] %></p>
                <p>GID: <%= game[:gid] %></p>

              </div>
              <div class="card-link" data-game-id="<%= i %>"></div>
            <!-- link_to '', '', {class: 'card-link'} -->
          </div>
        </div>
      <% end %>
    </div>
    <!-- details form -->
    <div class="row">
      <div class = 'form col-md-4 col-md-offset-4'>
        <%= render 'form' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class = 'form col-md-4 col-md-offset-4' id="api-search">
      <h3> Search for a game to add: </h3>
      <%= render 'form_search' %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('.card-link').on('click', function(event) {
        console.log(event.target);
        console.log($(event.target).data("gameId"));
        console.log();
      });
    });
  <% end %>
<% end %>



