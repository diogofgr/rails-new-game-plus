<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'game-1926907.png' %>);">
  <div class="banner-content">
    <h1>'Ello, stranger...</h1>
    <h2>What're ya buyin?</h2>
    <form action="products/index" class="form-inline">
      <input class="wide" type="text" placeholder="My Little Pony">
      <input type="submit" value="Let's go!" class="btn btn-primary">
    </form>
  </div>
</div>

<div class="container" style="margin-top: 700px">
  <h2>Stuff from the API here:</h2>
  <%= response = Unirest.get "https://igdbcom-internet-game-database-v1.p.mashape.com/games/?fields=*&limit=50&order=name%3Aasc&search=assassins",
  headers:{
    "X-Mashape-Key" => ENV["x_mashape_key"],
    "Accept" => "application/json"
  } %>
  <% response.body.each do |game| %>
  <p><%= game["name"] %></p>
  <p><%= game["human"] %></p>
  <p><%= game["genres"] %></p>

  <% end %>




</div>

