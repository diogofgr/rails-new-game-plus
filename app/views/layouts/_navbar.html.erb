<div class="navbar">
  <!-- Logo -->
  <%= link_to image_tag("link.gif", alt: "logo"), '/', class: "navbar-wagon-brand" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <!-- <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->


    <!-- Notification link-->
    <a href="" class="navbar-wagon-item navbar-wagon-link">
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="badge badge-blue">3</div>
      </div>
    </a>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_session.nil? %>
          <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% else %>
          <img src="https://bunnyholder.com/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if user_session.nil? %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% else %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Sell a game", new_user_product_offer_path(current_user) %></li>
            <li><%= link_to "Log out", destroy_user_session_path(current_user), method: :delete %></li>
          <% end  %>
        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->
    <%= link_to "Sign up!", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_session.nil? %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <% else %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Sell a game", new_user_product_offer_path(current_user) %></li>
            <li><%= link_to "Log out", destroy_user_session_path(current_user), method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
